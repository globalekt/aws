{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"",
  "Parameters" : {
    "AppID" : {
      "Type" : "String",
      "Default": "GRHV"
    },
    "UserID" : {
      "Type" : "String",
	  "Default": "cloud_user"
    },
    "ENIName" : {
      "Type" : "String"
    },
    "Role" : {
      "Type" : "String",
      "Default": "App"
    },
    "Environment" : {
      "Type" : "String"
    },
    "SubnetID" : {
      "Type" : "String"
    },
    "SecGroupList" : {
      "Type" : "List<AWS::EC2::SecurityGroup::Id>"
    }
  },
  "Resources": {
    "CreateENI" : {
      "Type" : "AWS::EC2::NetworkInterface",
      "Properties" : {
        "Description": {"Ref" : "ENIName"},
        "GroupSet": {"Ref" : "SecGroupList"},
        "SubnetId": {"Ref" : "SubnetID"},
        "Tags":[
          {
            "Key":"Userid",
            "Value": { "Ref" : "UserID" }
          },
          {
            "Key":"Vsad",
            "Value": { "Ref" : "AppID" }
          },
          {
            "Key":"Name",
            "Value": {"Ref" : "ENIName"}
          },
          {
            "Key":"Role",
            "Value": { "Ref" : "Role" }
          },
          {
            "Key":"Environment",
            "Value": { "Ref" : "Environment" }
          }
        ]
      }
    }
  },
  "Outputs":{
    "NetworkInterfaceId":{
      "Value":{
        "Ref":"CreateENI"
      }
    }
  }
}
